@page "/access-denied"
@layout Components.Layout.EmptyLayout
@using HWDPortalMaui.Services
@inject UserInfoService UserInfoService

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm text-center">
                @* [修改] 根據錯誤類型改變標題顏色 *@
                <div class="card-header @(string.IsNullOrEmpty(UserInfoService.ErrorMessage) ? "bg-warning" : "bg-danger") text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-octagon-fill me-2"></i>
                        @* [修改] 動態顯示標題 *@
                        @if (string.IsNullOrEmpty(UserInfoService.ErrorMessage))
                        {
                            <text>存取被拒絕 (Access Denied)</text>
                        }
                        else
                        {
                            <text>系統錯誤 (System Error)</text>
                        }
                    </h4>
                </div>
                <div class="card-body">
                    <p class="card-text fs-5">
                        @if (string.IsNullOrEmpty(UserInfoService.ErrorMessage))
                        {
                            <text>您的使用者帳號不存在於系統權限清單中。</text>
                        }
                        else
                        {
                            <strong>伺服器連線異常：</strong>
                        
                            <br />
                            <span class="text-danger">@UserInfoService.ErrorMessage</span>
                        }
                    </p>
                    <p class="card-text">
                        請聯繫系統管理員(Chain_Liu)以取得協助。
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>